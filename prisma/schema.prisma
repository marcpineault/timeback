generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  clerkId         String    @unique
  email           String    @unique
  name            String?
  plan            Plan      @default(FREE)
  stripeCustomerId String?
  stripeSubscriptionId String?
  videosThisMonth Int       @default(0)
  resetDate       DateTime  @default(now())
  hasCompletedOnboarding Boolean @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  videos          Video[]
  processingPreferences UserProcessingPreferences?

  // Instagram scheduling
  instagramAccounts   InstagramAccount[]
  scheduledPosts      ScheduledPost[]
  scheduleSlots       ScheduleSlot[]
  captionPreferences  CaptionPreferences?
  notifications       Notification[]

  // Google Drive integration
  googleDriveAccessToken  String?
  googleDriveRefreshToken String?
  googleDriveTokenExpiry  DateTime?
  googleDriveConnected Boolean @default(false)
}

model UserProcessingPreferences {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Auto-processing toggle (opt-in, defaults to OFF)
  autoProcessOnUpload  Boolean @default(false)

  // Selected preset (null = custom settings)
  activePreset         String?  // 'youtube-shorts' | 'instagram-reels' | 'youtube' | 'instagram-feed' | null

  // Caption Settings
  generateCaptions     Boolean @default(true)
  captionStyle         String  @default("instagram")

  // Headline Settings
  headline             String  @default("")
  headlinePosition     String  @default("top")
  headlineStyle        String  @default("speech-bubble")
  useHookAsHeadline    Boolean @default(false)
  generateAIHeadline   Boolean @default(false)

  // Audio Settings
  silenceThreshold     Float   @default(-25)
  silenceDuration      Float   @default(0.5)
  autoSilenceThreshold Boolean @default(true)
  normalizeAudio       Boolean @default(true)

  // Video Settings
  aspectRatio          String  @default("original")

  // Speech Correction (Beta)
  speechCorrection           Boolean @default(false)
  removeFillerWords          Boolean @default(true)
  removeRepeatedWords        Boolean @default(true)
  removeRepeatedPhrases      Boolean @default(true)
  removeFalseStarts          Boolean @default(true)
  removeSelfCorrections      Boolean @default(true)
  speechAggressiveness       String  @default("moderate")

  // B-Roll (future)
  generateBRoll        Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Video {
  id              String      @id @default(cuid())
  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  originalName    String
  originalUrl     String?
  processedUrl    String?
  status          VideoStatus @default(PENDING)
  duration        Int?        // in seconds
  silenceRemoved  Int?        // seconds removed
  errorMessage    String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  scheduledPosts  ScheduledPost[]

  // Indexes for query performance
  @@index([userId])           // Speed up user's video listing
  @@index([processedUrl])     // Speed up download ownership check
}

enum Plan {
  FREE
  PRO
  CREATOR
  ENTERPRISE
}

enum VideoStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// ─── Instagram Scheduling ───────────────────────────────────────────

model InstagramAccount {
  id                    String   @id @default(cuid())
  userId                String
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  instagramUserId       String   @unique
  instagramUsername      String
  instagramProfilePic   String?

  facebookPageId        String
  facebookPageName      String?

  accessToken           String
  tokenExpiresAt        DateTime

  isActive              Boolean  @default(true)
  lastPublishedAt       DateTime?
  lastError             String?

  scheduledPosts        ScheduledPost[]
  scheduleSlots         ScheduleSlot[]

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([userId])
}

model ScheduleSlot {
  id                    String   @id @default(cuid())
  userId                String
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  instagramAccountId    String
  instagramAccount      InstagramAccount @relation(fields: [instagramAccountId], references: [id], onDelete: Cascade)

  dayOfWeek             Int      // 0=Sunday ... 6=Saturday
  timeOfDay             String   // "09:00" 24h format
  timezone              String   // e.g. "America/New_York"

  isActive              Boolean  @default(true)

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@unique([instagramAccountId, dayOfWeek, timeOfDay])
  @@index([userId])
  @@index([instagramAccountId])
}

model ScheduledPost {
  id                    String   @id @default(cuid())
  userId                String
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  instagramAccountId    String
  instagramAccount      InstagramAccount @relation(fields: [instagramAccountId], references: [id], onDelete: Cascade)

  videoId               String
  video                 Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)

  caption               String
  captionGenerated      Boolean  @default(true)
  hashtags              String[]
  coverImageUrl         String?

  scheduledFor          DateTime
  publishedAt           DateTime?
  status                PostStatus @default(QUEUED)

  igContainerId         String?
  igMediaId             String?
  igPermalink           String?

  retryCount            Int      @default(0)
  lastError             String?
  lastAttemptAt         DateTime?

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([userId])
  @@index([instagramAccountId])
  @@index([scheduledFor])
  @@index([status])
  @@index([status, scheduledFor])
}

model CaptionPreferences {
  id                    String   @id @default(cuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  brandVoice            String   @default("casual")
  niche                 String   @default("")
  captionStyle          String   @default("hook-based")

  hashtagCount          Int      @default(25)
  customHashtags        String[]
  blockedHashtags       String[]

  defaultCTA            String   @default("")
  includeCTA            Boolean  @default(true)

  exampleCaptions       String[]

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String
  title     String
  message   String
  read      Boolean  @default(false)
  data      Json?
  createdAt DateTime @default(now())

  @@index([userId, read])
}

enum PostStatus {
  QUEUED
  SCHEDULED
  PROCESSING_VIDEO
  UPLOADING
  PUBLISHED
  FAILED
  CANCELLED
}
