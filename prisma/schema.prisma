generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  clerkId         String    @unique
  email           String    @unique
  name            String?
  plan            Plan      @default(FREE)
  stripeCustomerId String?
  stripeSubscriptionId String?
  videosThisMonth Int       @default(0)
  resetDate       DateTime  @default(now())
  hasCompletedOnboarding Boolean @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  videos          Video[]
  processingPreferences UserProcessingPreferences?

  // Instagram scheduling
  instagramAccounts   InstagramAccount[]
  scheduledPosts      ScheduledPost[]
  scheduleSlots       ScheduleSlot[]
  captionPreferences  CaptionPreferences?
  notifications       Notification[]

  // Google Drive integration
  googleDriveAccessToken  String?
  googleDriveRefreshToken String?
  googleDriveTokenExpiry  DateTime?
  googleDriveConnected Boolean @default(false)

  // Ideate: AI script generation
  creatorProfile      CreatorProfile?
  ideas               Idea[]
  scripts             Script[]
}

model UserProcessingPreferences {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Auto-processing toggle (opt-in, defaults to OFF)
  autoProcessOnUpload  Boolean @default(false)

  // Selected preset (null = custom settings)
  activePreset         String?  // 'youtube-shorts' | 'instagram-reels' | 'youtube' | 'instagram-feed' | null

  // Caption Settings
  generateCaptions     Boolean @default(true)
  captionStyle         String  @default("instagram")

  // Headline Settings
  headline             String  @default("")
  headlinePosition     String  @default("top")
  headlineStyle        String  @default("speech-bubble")
  useHookAsHeadline    Boolean @default(false)
  generateAIHeadline   Boolean @default(false)

  // Audio Settings
  silenceThreshold     Float   @default(-25)
  silenceDuration      Float   @default(0.5)
  autoSilenceThreshold Boolean @default(true)
  normalizeAudio       Boolean @default(true)

  // Video Settings
  aspectRatio          String  @default("original")

  // Speech Correction
  speechCorrection           Boolean @default(false)
  removeFillerWords          Boolean @default(true)
  removeRepeatedWords        Boolean @default(true)
  removeRepeatedPhrases      Boolean @default(true)
  removeFalseStarts          Boolean @default(true)
  removeSelfCorrections      Boolean @default(true)
  speechAggressiveness       String  @default("moderate")
  speechConfidenceThreshold  Float   @default(0.6)
  speechLanguage             String  @default("auto")
  customFillerWords          String[]
  customFillerPhrases        String[]
  speechCorrectionPreset     String?  // 'minimal' | 'professional' | 'broadcast' | null (custom)

  // B-Roll (future)
  generateBRoll        Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Video {
  id              String      @id @default(cuid())
  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  originalName    String
  originalUrl     String?
  processedUrl    String?
  status          VideoStatus @default(PENDING)
  duration        Int?        // in seconds
  silenceRemoved  Int?        // seconds removed
  transcript      String?     // Full transcript text from Whisper
  errorMessage    String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  scheduledPosts  ScheduledPost[]

  // Indexes for query performance
  @@index([userId])           // Speed up user's video listing
  @@index([processedUrl])     // Speed up download ownership check
}

enum Plan {
  FREE
  PRO
  CREATOR
  ENTERPRISE
}

enum VideoStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// ─── Instagram Scheduling ───────────────────────────────────────────

model InstagramAccount {
  id                    String   @id @default(cuid())
  userId                String
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  instagramUserId       String   @unique
  instagramUsername      String
  instagramProfilePic   String?

  facebookPageId        String
  facebookPageName      String?

  accessToken           String   // Page access token (used for publishing)
  userAccessToken       String?  // Long-lived user token (used to refresh page tokens)
  tokenExpiresAt        DateTime // Expiry of the user access token (60 days)

  isActive              Boolean  @default(true)
  lastPublishedAt       DateTime?
  lastError             String?

  scheduledPosts        ScheduledPost[]
  scheduleSlots         ScheduleSlot[]

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([userId])
}

model ScheduleSlot {
  id                    String   @id @default(cuid())
  userId                String
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  instagramAccountId    String
  instagramAccount      InstagramAccount @relation(fields: [instagramAccountId], references: [id], onDelete: Cascade)

  dayOfWeek             Int      // 0=Sunday ... 6=Saturday
  timeOfDay             String   // "09:00" 24h format
  timezone              String   // e.g. "America/New_York"

  isActive              Boolean  @default(true)

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@unique([instagramAccountId, dayOfWeek, timeOfDay])
  @@index([userId])
  @@index([instagramAccountId])
}

model ScheduledPost {
  id                    String   @id @default(cuid())
  userId                String
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  instagramAccountId    String
  instagramAccount      InstagramAccount @relation(fields: [instagramAccountId], references: [id], onDelete: Cascade)

  videoId               String
  video                 Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)

  caption               String
  captionGenerated      Boolean  @default(true)
  hashtags              String[]
  coverImageUrl         String?

  scheduledFor          DateTime
  publishedAt           DateTime?
  status                PostStatus @default(QUEUED)

  igContainerId         String?
  igMediaId             String?
  igPermalink           String?

  retryCount            Int      @default(0)
  lastError             String?
  lastAttemptAt         DateTime?

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([userId])
  @@index([instagramAccountId])
  @@index([scheduledFor])
  @@index([status])
  @@index([status, scheduledFor])
}

model CaptionPreferences {
  id                    String   @id @default(cuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  brandVoice            String   @default("casual")
  niche                 String   @default("")
  captionStyle          String   @default("hook-based")

  hashtagCount          Int      @default(25)
  customHashtags        String[]
  blockedHashtags       String[]

  defaultCTA            String   @default("")
  includeCTA            Boolean  @default(true)

  exampleCaptions       String[]

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String
  title     String
  message   String
  read      Boolean  @default(false)
  data      Json?
  createdAt DateTime @default(now())

  @@index([userId, read])
}

enum PostStatus {
  QUEUED
  SCHEDULED
  PROCESSING_VIDEO
  UPLOADING
  PUBLISHED
  FAILED
  CANCELLED
}

// ─── Ideate: AI Script Generation ────────────────────────────────────

model CreatorProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Core identity
  niche               String   @default("")
  targetAudience      String   @default("")
  contentGoal         String   @default("")

  // SPCL Framework fields
  statusProof         String[]
  powerExamples       String[]
  credibilityMarkers  String[]
  likenessTraits      String[]

  // Voice & style
  toneOfVoice         String   @default("direct")
  personalCatchphrases String[]
  avoidTopics         String[]
  exampleScripts      String[]

  // Platform preferences
  primaryPlatform     String   @default("instagram")
  typicalVideoLength  Int      @default(60)

  isComplete          Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Idea {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title         String
  hook          String
  angle         String
  spclElements  Json
  targetEmotion String
  estimatedLength Int  @default(60)

  status        IdeaStatus @default(SAVED)
  scripts       Script[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([userId, status])
}

enum IdeaStatus {
  SAVED
  SCRIPTED
  FILMED
  ARCHIVED
}

model Script {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  ideaId    String?
  idea      Idea?    @relation(fields: [ideaId], references: [id], onDelete: SetNull)

  title     String
  hook      String
  body      String
  cta       String
  fullScript String

  // Metadata
  estimatedDuration Int  @default(60)
  wordCount         Int  @default(0)
  spclBreakdown     Json?

  // User edits
  isEdited    Boolean  @default(false)
  version     Int      @default(1)

  // AI Learning: ratings
  rating      String?

  // AI Learning: original AI-generated content (before user edits)
  originalHook       String?
  originalBody       String?
  originalCta        String?
  originalFullScript String?

  status      ScriptStatus @default(DRAFT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([ideaId])
  @@index([userId, status])
  @@index([userId, rating])
}

enum ScriptStatus {
  DRAFT
  READY
  FILMED
  ARCHIVED
}
